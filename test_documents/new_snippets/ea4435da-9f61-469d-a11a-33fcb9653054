						newTags = {"default":"b0c55bfdontmiss-20","widget":"b0c55bfdontmiss-20"};
					} else if ( -1 !== location.indexOf( 'utm_source=bgr' )
						&& -1 !== location.indexOf( 'utm_campaign=bf_nav' ) ) {
						newTags = {"default":"b0c55bfnav-20","widget":"b0c55bfnav-20"};
					}
				}
				if ( newTags ) {
					$('.entry-content a').each(function(){
						var link = $(this),
							href = link.attr('href');
						if ( -1 === href.indexOf( 'amazon.com' ) ) {
