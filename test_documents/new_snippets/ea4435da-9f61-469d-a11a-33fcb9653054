<!-- START callback function for onhashchange(when the hash tag in the url gets updated) -->
<script type="text/javascript">
function global_urlhashchanged() {
		/**
	 * Track pageview
	 */
	// Build the current domain name
	var tmp_td = document.domain.split('.');
	var tracking_domain = tmp_td[tmp_td.length-2] + "." + tmp_td[tmp_td.length-1];

	// Build the current image
	var imgname = location.hash.replace('#','');

	// Track PV in GA
	try {
		ga( 'send', 'pageview', location.pathname + location.hash );
	} catch(err) {}

	// Track Quantcast
	try {

		// need to reset the array containing the options previously sent
		// as quantcast does not send the same key twice.
		if (__qc && __qc.qpixelsent && __qc.qpixelsent.length > 0) {
			__qc.qpixelsent.length = 0;
		}
		// First Quantcast Tag
		_qoptions={
				qacct:"p-6fKiDaopTGEQg"
		};

		quantserve();

	} catch(err) {}

	// Track Comscore
	try {
		setTimeout(function(){ var url = "http" + (/^https:/.test(document.location.href) ? "s" : "") + "://beacon.scorecardresearch.com/scripts/beacon.dll" + "?c1=2&amp;c2=6035310&amp;c3=&amp;c4=&amp;c5=&amp;c6=&amp;c7=" + escape(document.location.href) + "&amp;c8=" + escape(document.title) + "&amp;c9=" + escape(document.referrer) + "&amp;c10=" + escape(screen.width+'x'+screen.height) + "&amp;rn=" + (new Date()).getTime(); var i = new Image(); i.src = url; }, 1);

		COMSCORE.beacon({c1:2,c2:"6035310",c3:"6035310",c4:"",c5:"",c6:"",c15:""});

	} catch(err) {}


	// Track Nielson
	try {
		(function () {
			var d = new Image(1, 1);
			d.onerror = d.onload = function () {
				d.onerror = d.onload = null;
			};

			d.src = ["//secure-us.imrworldwide.com/cgi-bin/m?ci=us-203220h&cg=0&cc=1&si=", escape(window.location.href), "&rp=", escape(document.referrer), "&ts=compact&rnd=", (new Date()).getTime()].join('');

		})();

	} catch(err) {}


	/**
	 * Track pageview end
	 */
}
</script>

<div id="amzn-assoc-ad-1e33850c-6557-44f9-8fa9-d8a945b7bb10"></div><script async src="https://z-na.associates-amazon.com/onetag/v2?MarketPlace=US&instanceId=1e33850c-6557-44f9-8fa9-d8a945b7bb10"></script>

<script>
	(function($){
		$(document).ready(function(){
			var container = $('.infinite-scroll-container');
			window.BGRPageAdSlots = {};
			var initializeOutbrain = function( el ) {
				if ( typeof window.bgrOutbrainTemplate === 'undefined' ) {
					return;
				}
				if ( el.data('outbrain-initialized') ) {
					return;
				}
				el.data('outbrain-initialized', 1);
				var outbrainWidget = $(window.bgrOutbrainTemplate);
				outbrainWidget.find('.OUTBRAIN').attr('data-src', el.data('href'));
				el.find('.bgr-outbrain-wrapper').append( outbrainWidget );
				if ( typeof window.OBR === 'object' ) {
					OBR.extern.researchWidget();
				}
			};

			container.infiniteScroll({
				append: '.infinite-scroll-element',
				scrollThreshold: 10000,
				history: 'push',
				historyTitle: true,
				path: function() {
					var next = $('a[rel="prev"]').last();
					if ( $('.infinite-scroll-element').length >= 10
						|| ! next.length
						|| $('.infinite-scroll-element[data-href="' + next.attr('href') + '"]' ).length ) {
						return false;
					}
					return next.attr('href');
				}
			});

			container.on( 'append.infiniteScroll', function( event, response, path, items ) {
				// Fix for srcset images not loading on iOS.
				// See https://github.com/metafizzy/infinite-scroll/issues/770
				$( items ).find('img[srcset]').each( function( i, img ) {
					img.outerHTML = img.outerHTML;
				});
			});

			container.on( 'load.infiniteScroll', function ( event, response, path ) {

				window.BGRAdSlots = [];

				var infScroll = $( '.infinite-scroll-container' ).data( 'infiniteScroll' ),
					content = $( response ).find( '.infinite-scroll-element' ),
					adPathName = '8352/bgr/ros/',
					selectors = content.find( '[class=admz]' );

				if ( 'undefined' !== typeof window.pmc_adm_gpt && window.pmc_adm_gpt.is_mobile() ) {
					adPathName = '8352/bgr.mob/ros/';
				}

				if ( 0 !== selectors.length ) {
					$.each( selectors, function ( i, adDiv ) {

						var adConfig = false,
							adName = false,
							divId = adDiv.getAttribute( 'id' );

						if ( 'adm-inline-article-ad-1' === divId ) {
							adName = adPathName + 'mid-article';
						} else if ( 'adm-inline-article-ad-2' === divId ) {
							adName = adPathName + 'mid-article2';
						} else if ( 0 === divId.search( 'adm-inline-article-ad-x' ) ) {
							adName = adPathName + 'mid-articleX';
						} else {
							adName = adPathName + divId.replace( 'adm-', '' );
						}

						var newDivId = divId + '-' + infScroll.pageIndex;
						adDiv.setAttribute( 'id', newDivId );
						var childDivId = $(adDiv).find('div:last').attr('id') + '-' + infScroll.pageIndex;
						$(adDiv).find('div:last').attr('id', childDivId );

						if ( 'undefined' !== typeof window.pmc_adm_gpt
							&& 'undefined' !== typeof window.pmc_adm_gpt.settings ) {

							var settings = window.pmc_adm_gpt.settings;

							if ( 'object' !== typeof settings.master_list ) {
								settings[ 'master_list' ] = settings.ad_list.default;
							}

							adConfig = settings.master_list.find( function ( item ) {
								if ( item.slot === adName ) {
									return true;
								}
							} );
						}

						if ( false !== adConfig && 'object' === typeof adConfig ) {
							adConfig = JSON.parse( JSON.stringify( adConfig ).replace( adConfig.id, childDivId ) );
							window.BGRAdSlots.push( adConfig );
						}

					} );
					window.BGRPageAdSlots[path] = window.BGRAdSlots;
				}
			} );

			initializeOutbrain( container.find('.infinite-scroll-element') );
			var viewedURLs = [],
				didSecondPageViewEvent = false;

			container.on('history.infiniteScroll',function( event, title, path ) {
				var baseURI = event.currentTarget.baseURI;
				var el = container.find('.infinite-scroll-element[data-href="' + baseURI + '"]'),
					customDimensions = el.data('ga-custom-dimensions');
				if ( typeof window.ga !== 'undefined' ) {
					ga('set', 'page', el.data('href') );
					ga('set', customDimensions );
					if ( -1 === viewedURLs.indexOf( baseURI ) ) {
						ga('send', 'event', 'Infinite Scroll Pageview', el.data('href') );
						if ( ! didSecondPageViewEvent ) {
							ga('send', 'event', 'Infinite Scroll Second Pageview', el.data('href') );
							didSecondPageViewEvent = true;
						}
						ga('send', 'pageview');

						$(document).trigger('bgr-responsive-iframes');

					}
					viewedURLs.push( baseURI );
				}
				initializeOutbrain( el );
				//ads
				var settings = window.pmc_adm_gpt.settings;

				if ( 'object' === typeof settings &&
					'undefined' !== window.BGRPageAdSlots[path] ) {

					settings.ad_list.default = window.BGRPageAdSlots[path];
					delete window.BGRPageAdSlots[path];
					pmc_adm_gpt.init( settings );
					pmc_adm_gpt.render_ads( 'default' );
				}
			});
			// Load the next three pages for scrolling awesomesauce
			container.infiniteScroll('loadNextPage');
			container.infiniteScroll('loadNextPage');
			container.infiniteScroll('loadNextPage');
		});

	}(jQuery))
</script>

