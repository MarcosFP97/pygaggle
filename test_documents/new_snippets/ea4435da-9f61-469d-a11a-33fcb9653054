						}
					} else if ( -1 !== location.indexOf( 'utm_source=bgr' )
						&& -1 !== location.indexOf( 'utm_campaign=topdeals' ) ) {
						newTags = {"default":"b0c55topdeals-20","widget":"b0c55topdealswget-20"};
					} else if ( -1 !== location.indexOf( 'utm_source=rss' )
						&& -1 !== location.indexOf( 'utm_campaign=topdeals' ) ) {
