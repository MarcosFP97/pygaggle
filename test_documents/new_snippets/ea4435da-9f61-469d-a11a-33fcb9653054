							newTags = {"default":"b0c55fb1-20","widget":"b0c55fb1-20"};
						} else if ( -1 !== location.indexOf( 'utm_content=2' ) ) {
							newTags = {"default":"b0c55fb2-20","widget":"b0c55fb2-20"};
